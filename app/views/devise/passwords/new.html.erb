<div class="indentification_page">
  <div class="indentification_img">
    <%= image_tag ("le-petit-commerce.jpg") %>
  </div>

  <div class= "password_data">
    <h3>Circuit court</h3>
    <h2>Reset password !</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email", class: "device_identification"%>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "device_identification", id: "device_action" %>
    </div>
  <% end %>

  <%= render "devise/shared/links"%>
  </div>
</div>
