<div class="indentification_page">

  <div class="indentification_img">
    <%= image_tag ("le-petit-commerce.jpg") %>
  </div>

  <div class= "identication_data">
    <h3>Circuit court</h3>
    <h2>Bon retour parmi nous !</h2>

    <div class="identication_alt">
      <h5>Pas encore inscrit?</h5><%= link_to "Sign up", new_registration_path(resource_name) %><br />
    </div>

    <div class="identication_button" id="sign_in_page">
      <div class= "radio_button" url="/users/sign_in" value="user">
         <input type="radio" id="f-option" name="selector" checked>
         <label for="f-option">Personnel</label>

         <div class="check"></div>
      </div>
      <div class= "radio_button" url="/traders/sign_in" value="trader">
         <input type="radio" id="s-option" name="selector" >
         <label for="s-option">Entreprise</label>

         <div class="check"><div class="inside"></div></div>
      </div>
    </div>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "device_identification" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "device_identification" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field device_link">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "device_identification", id: "divice_sign_in" %>
    </div>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "device_link" %><br />
  <% end %>
 </div>
</div>
