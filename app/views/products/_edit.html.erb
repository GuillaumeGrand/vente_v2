  <div class = "photos">
     <% @product.photos.each do |photo| %>
            <%= cl_image_tag(photo.key, :width => 250, :height => 200, :class => "photo_product", :id => photo.id) %>
    <% end %>
  </div>
<div class="container">

  <%= simple_form_for [@store, @product], :url => product_path, method: :patch do |f| %>
    <%= f.error_notification %>

    <%= f.input :name, input_html: { class: 'dasboard_input' } %>

    <%= f.input :presentation, input_html: { class: 'dasboard_input' } %>

    <%= f.input :product_characteristic, input_html: { class: 'dasboard_input' } %>

    <%= f.input :stock, input_html: { class: 'dasboard_input' } %>

    <%= f.input :price, input_html: { class: 'dasboard_input' } %>

    <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <%= f.button :submit, class: "btn btn-flat" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
